<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstFragment"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Beacon Search"
        android:id="@+id/search_beacon_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="103dp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET GROUP LIST"
        android:id="@+id/getgroupbutton"
        android:layout_marginTop="46dp"
        android:layout_alignTop="@+id/search_beacon_button"
        android:layout_alignLeft="@+id/search_beacon_button"
        android:layout_alignStart="@+id/search_beacon_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BROADCAST TEST"
        android:id="@+id/broadcastbutton"
        android:layout_below="@+id/getgroupbutton"
        android:layout_alignLeft="@+id/getgroupbutton"
        android:layout_alignStart="@+id/getgroupbutton" />
</RelativeLayout>