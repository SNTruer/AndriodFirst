<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#93c309">

        <ImageButton
            android:id="@+id/search_beacon_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/btn_search" />

        <ImageButton
            android:id="@+id/getgroupbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/btn_group" />

        <ImageButton
            android:id="@+id/broadcastbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/btn_broadcast" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <at.markushi.ui.CircleButton
            android:id="@+id/servicebutton"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="70dp"
            android:src="@mipmap/btn_on"
            app:cb_color="#99CC00"
            app:cb_pressedRingWidth="20dp" />

        <TextView
            android:id="@+id/servicetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="서비스를 시동해주십시오."
            android:textSize="24dp" />
    </LinearLayout>
</LinearLayout>